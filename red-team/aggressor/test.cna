### if you run an ls on a directory, and first.log is there this will output to the script console
on beacon_output_ls {
        if ("*first.log*" iswm $2) {
                local('$temp $type $size $moddate $modtime $name');
                foreach $temp (split("\n", $2)) {
                        if ("*first.log*" iswm $temp) {
                                ($type, $size, $moddate, $modtime, $name) = split("\\s+", $temp);
                                println($name);
                        }
                }
        }
}
